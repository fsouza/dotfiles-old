function find_brew {
	paths=(/usr/local/bin/brew)
	for path in ${paths}; do
		if [ -x "${path}" ]; then
			echo ${path}
			return 0
		fi
	done
}

brew_path=$(find_brew)
if [ -n "${brew_path}" ]; then
	eval "$("${brew_path}" shellenv)"

	export HOMEBREW_NO_AUTO_UPDATE=1
	export HOMEBREW_NO_EMOJI=1
	export HOMEBREW_NO_GITHUB_API=1
fi
