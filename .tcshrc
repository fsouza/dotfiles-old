setenv ARCHFLAGS '-arch i386 -arch x86_64'

setenv CLICOLOR 1
setenv LSCOLORS ExFxCxDxAxegedabagaxax

set vim=/Applications/MacVim.app/Contents/MacOS/Vim
alias vim $vim
setenv EDITOR vim
setenv PAGER less
setenv MANPAGER $PAGER

setenv GOROOT $HOME/lib/go
setenv GOPATH $HOME/lib/gopath
setenv GOBIN $GOROOT/bin
setenv GOOS darwin
setenv GOARCH amd64
setenv GOMAXPROCS 1

set path=(/usr/local/bin /usr/local/sbin /opt/python/bin ${GOBIN} /opt/local/bin /opt/local/sbin $path)

setenv VIRTUOSO_HOME /usr/local/virtuoso-opensource

alias parse_git_branch "git branch >& /dev/null && git branch | sed -e '/^[^*]/d' -e 's/* \(.*\)/g=\1 /'"
alias parse_hg_branch "hg branch >& /dev/null && hg branch | awk '{print $1}' | sed -e 's/\(.*\)/h=\1 /'"
alias workon "source ~/Projects/dotfiles/extra/activate_virtualenv"
alias deactivate "source ~/Projects/dotfiles/extra/deactivate_virtualenv"

alias setprompt 'set prompt="`parse_git_branch``parse_hg_branch`w=$cwd:t% "'
alias cwdcmd setprompt
setprompt
